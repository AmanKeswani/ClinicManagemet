<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="100dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/listAppID"
            android:layout_width="41dp"
            android:layout_height="78dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="ID"
            android:textSize="40sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/listAppPlace"
            android:layout_width="160dp"
            android:layout_height="35dp"
            android:text="name"
            android:textSize="28sp"
            app:layout_constraintBottom_toBottomOf="@+id/listAppID"
            app:layout_constraintStart_toStartOf="@+id/listAppName" />

        <TextView
            android:id="@+id/listAppName"
            android:layout_width="160dp"
            android:layout_height="35dp"
            android:layout_marginStart="15dp"
            android:text="name"
            android:textSize="28sp"
            app:layout_constraintStart_toEndOf="@+id/listAppID"
            app:layout_constraintTop_toTopOf="@+id/listAppID" />

        <TextView
            android:id="@+id/listAppDate"
            android:layout_width="160dp"
            android:layout_height="35dp"
            android:layout_marginStart="236dp"
            android:text="name"
            android:textSize="28sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/listAppName" />

        <TextView
            android:id="@+id/listAppAmount"
            android:layout_width="160dp"
            android:layout_height="35dp"
            android:layout_marginStart="236dp"
            android:text="name"
            android:textSize="28sp"
            app:layout_constraintBottom_toBottomOf="@+id/listAppPlace"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>